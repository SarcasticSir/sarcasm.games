<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="UTF-8">
    <style>
        .quiz-container { max-width: 500px; margin: 20px auto; font-family: sans-serif; text-align: center; border: 2px solid #eee; padding: 20px; border-radius: 15px; background: #fffdfd; }
        .question-card { min-height: 120px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem; font-weight: bold; margin-bottom: 20px; color: #333; }
        .btn-group { display: flex; gap: 10px; justify-content: center; margin-bottom: 20px; }
        .player-btn { padding: 15px 25px; border: 2px solid #ddd; border-radius: 8px; cursor: pointer; background: white; transition: 0.2s; font-size: 1rem; flex: 1; }
        .player-btn.active { border-color: #ff4d6d; background: #fff0f3; }
        .next-btn { width: 100%; padding: 12px; border: none; border-radius: 8px; background: #333; color: white; cursor: pointer; font-size: 1rem; }
        .next-btn:disabled { background: #ccc; }
        .scoreboard { display: flex; justify-content: space-around; margin-top: 20px; border-top: 1px solid #eee; padding-top: 15px; font-weight: bold; }
    </style>
</head>
<body>

<div class="quiz-container" id="quiz-box">
    <div id="quiz-content">
        <div class="question-card" id="question-text">Klar for Mamma-Quiz?</div>
        
        <div class="btn-group">
            <button class="player-btn" onclick="togglePoint('isak')" id="btn-isak">Isak</button>
            <button class="player-btn" onclick="togglePoint('lilly')" id="btn-lilly">Lilly</button>
        </div>

        <button class="next-btn" onclick="nextQuestion()" id="next-button">Neste spørsmål</button>
    </div>

    <div class="scoreboard">
        <div>Isak: <span id="score-isak">0</span></div>
        <div>Lilly: <span id="score-lilly">0</span></div>
    </div>
</div>

<script>
    const questions = [
        "Hva er mammas absolutte favoritt-sang?",
        "Hva pleier mamma å si når hun er skikkelig oppgitt?",
        "Hvis mamma vant en million, hva ville hun brukt den på?",
        "Hva er det rareste mamma pleier å spise?",
        "Hvem er flinkest til å rydde av barna (ifølge mamma)?"
    ];

    let currentIdx = 0;
    let scores = { isak: 0, lilly: 0 };
    let selectedThisRound = { isak: false, lilly: false };

    function togglePoint(player) {
        selectedThisRound[player] = !selectedThisRound[player];
        document.getElementById(`btn-${player}`).classList.toggle('active');
    }

    function nextQuestion() {
        // Legg til poeng
        if (selectedThisRound.isak) scores.isak++;
        if (selectedThisRound.lilly) scores.lilly++;
        
        // Oppdater display
        document.getElementById('score-isak').innerText = scores.isak;
        document.getElementById('score-lilly').innerText = scores.lilly;

        // Reset valg og gå til neste
        selectedThisRound = { isak: false, lilly: false };
        document.querySelectorAll('.player-btn').forEach(b => b.classList.remove('active'));
        
        currentIdx++;
        if (currentIdx < questions.length) {
            document.getElementById('question-text').innerText = questions[currentIdx];
        } else {
            showFinalScore();
        }
    }

    function showFinalScore() {
        const winner = scores.isak > scores.lilly ? "Isak" : (scores.lilly > scores.isak ? "Lilly" : "Begge!");
        document.getElementById('quiz-content').innerHTML = `
            <h3>Quizen er ferdig!</h3>
            <p>Vinneren er: <strong>${winner}</strong></p>
            <button class="next-btn" onclick="location.reload()">Start på nytt</button>
        `;
    }

    // Start første spørsmål
    document.getElementById('question-text').innerText = questions[0];
</script>

</body>
</html>
